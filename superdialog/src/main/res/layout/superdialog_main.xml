<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/examesdialog_round"
    android:minWidth="260dp"
    android:orientation="vertical"
    android:paddingTop="24dp"
    android:paddingBottom="5dp"
    tools:visibility="visible"
    tools:context=".SuperDialog">

    <com.kishannareshpal.superdialog.AnimatedIcon
        android:id="@+id/ai_animatedIcon"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginBottom="14dp"
        android:layout_gravity="center"
        android:visibility="gone"
        tools:visibility="visible"/>

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="14dp"
        android:scaleType="fitXY"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="5dp"
        android:text="Title"
        android:textAllCaps="true"
        android:textColor="@color/md_black_1000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone"
        tools:visibility="visible" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:fadeScrollbars="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:breakStrategy="simple"
                android:gravity="center_horizontal"
                android:maxLines="14"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:visibility="gone"
                tools:visibility="visible" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="horizontal"
        tools:visibility="visible">

        <android.support.design.button.MaterialButton
            android:id="@+id/btn_negative"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Guia"
            android:textAllCaps="true"
            android:textColor="@color/md_white_1000"
            android:visibility="gone"
            app:backgroundTint="@color/secondary_green"
            app:cornerRadius="32dp"
            tools:visibility="visible" />

        <Space
            android:id="@+id/space"
            android:layout_width="6dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible" />

        <android.support.design.button.MaterialButton
            android:id="@+id/btn_positive"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Enunciado"
            android:textAllCaps="true"
            android:textColor="@color/md_white_1000"
            android:visibility="gone"
            app:backgroundTint="@color/secondary_green"
            app:cornerRadius="32dp"
            tools:visibility="visible" />

    </LinearLayout>

    <android.support.design.button.MaterialButton
        android:id="@+id/btn_cancel"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="Fechar"
        android:textAllCaps="true"
        android:textColor="@color/md_grey_800"
        android:visibility="gone"
        app:backgroundTint="@color/md_grey_200"
        app:cornerRadius="32dp"
        tools:visibility="visible" />

</LinearLayout>